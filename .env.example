# Collaboration Bridge Environment Configuration

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Application Settings
PROJECT_NAME=Collaboration Bridge
API_VERSION=v1
API_PREFIX=/api/v1
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Production PostgreSQL URL (required for production)
DATABASE_URL_PROD=postgresql+asyncpg://postgres:postgres@localhost:5432/collaboration_bridge
DATABASE_BACKEND=postgresql
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=collaboration_bridge
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Testing SQLite URL (used for testing)
DATABASE_URL_TEST=sqlite+aiosqlite:///:memory:

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Authentication & Security
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Project Name

# External Services
SENTRY_DSN=https://your-sentry-dsn-here

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Docker Configuration
API_PORT=8000
DB_PORT=5432
REDIS_PORT=6379
TEST_DB_PORT=5433

# Development Tools
ENABLE_DOCS=true
ENABLE_REDOC=true
